<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Базовый градиентный фон -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="@color/primary_dark"
                android:centerColor="@color/primary"
                android:endColor="@color/primary_light"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Декоративный узор в верхнем правом углу -->
    <item android:right="-100dp" android:top="-100dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="oval">
                <solid android:color="#15FFFFFF" />
                <size android:width="300dp" android:height="300dp" />
            </shape>
        </rotate>
    </item>
    
    <!-- Декоративный узор в нижнем левом углу -->
    <item android:left="-150dp" android:bottom="-150dp">
        <shape android:shape="oval">
            <solid android:color="#10FFFFFF" />
            <size android:width="350dp" android:height="350dp" />
        </shape>
    </item>
    
    <!-- Маленькие декоративные круги -->
    <item android:right="50dp" android:top="200dp">
        <shape android:shape="oval">
            <solid android:color="#08FFFFFF" />
            <size android:width="80dp" android:height="80dp" />
        </shape>
    </item>
    
    <item android:left="70dp" android:top="150dp">
        <shape android:shape="oval">
            <solid android:color="#05FFFFFF" />
            <size android:width="40dp" android:height="40dp" />
        </shape>
    </item>
</layer-list> 