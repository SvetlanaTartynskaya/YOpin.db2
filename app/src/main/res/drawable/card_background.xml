<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Основной фон карточки -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    
    <!-- Декоративная рамка -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke 
                android:width="1dp" 
                android:color="@color/accent_light" />
            <padding 
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    
    <!-- Декоративный уголок с пером (имитация) -->
    <item android:gravity="top|right">
        <rotate android:fromDegrees="315">
            <shape android:shape="rectangle">
                <size 
                    android:width="32dp"
                    android:height="32dp" />
                <solid android:color="@color/accent" />
            </shape>
        </rotate>
    </item>
</layer-list> 